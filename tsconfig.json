{
    "extends": "./configs/base.tsconfig.json",
    "compilerOptions": {
        "target": "ES2017",
        "module": "NodeNext",
        "lib": [
            "ESNext"
        ],
        "sourceMap": true,
        "outDir": "dist/esm",
        "rootDir": ".",
        "declaration": true,
        "declarationDir": "dist/types",
        "esModuleInterop": true
    },
    "include": [    
        "src/**/*.ts",
        "test/**/*.ts",
        "shared"
    ],
    "exclude": [
        "out",
        "node_modules"
    ]
}
